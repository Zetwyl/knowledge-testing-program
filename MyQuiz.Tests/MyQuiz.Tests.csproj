<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net48</TargetFramework>
    <IsPackable>false</IsPackable>
    <IsTestProject>true</IsTestProject>
    <RootNamespace>MyQuiz.Tests</RootNamespace>
    <AssemblyName>MyQuiz.Tests</AssemblyName>
    <EnableDefaultCompileItems>false</EnableDefaultCompileItems>
  </PropertyGroup>

  <!-- MSTest пакеты -->
  <ItemGroup>
    <PackageReference Include="MSTest.TestAdapter" Version="2.2.10" />
    <PackageReference Include="MSTest.TestFramework" Version="2.2.10" />
  </ItemGroup>

  <!-- Исходники тестов -->
  <ItemGroup>
    <Compile Include="Application\**\*.cs" />
    <Compile Include="Strategies\**\*.cs" />
    <!-- Если у тебя больше тестов — добавляй сюда -->
  </ItemGroup>

  <!-- Ссылка на Core проект -->
  <ItemGroup>
    <ProjectReference Include="..\MyQuiz.Core\MyQuiz.Core.csproj" />
  </ItemGroup>

</Project>
